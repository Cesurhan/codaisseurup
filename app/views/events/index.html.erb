<h2>Your Events
  <span class="badge"><%= @events.count%></span>
</h2>
<hr/>
<%= link_to "Add new event", new_event_path, class: "btn btn-success"%>
<br/><br/>
<div class="row">
  <% @events.each do |event| %>
  <div class="col-md-3">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h4><%= event.name %></h4>
      </div>

      <div class="panel-body">
        <p>Price:
          <%= event.price %></p>
        <p>Location:
          <%= event.location %></p>
      </div>

      <div class="panel-footer">
        <%= link_to "View", event, class: "btn btn-default" %>
        <%= link_to "Update", edit_event_path(event), class: "btn btn-default" %>
      </div>
    </div>
  </div>
  <% end %>
</div>
