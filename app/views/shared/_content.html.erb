<!-- Custom content thumbnail -->
<h1 class="text-center">Latest Events</h1>
<hr>

<div class="row">
  <% @events.each do |event| %>
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <!-- <img src="http://mdwnon.com/Blog/wp-content/uploads/2014/04/3aith-319x200.jpg" alt="..."> -->
      <%= event.photo %>
      <div class="caption">
        <h4><%= event.name %></h4>
        <p>Description:
          <%= event.description %></p>
        <p>Price:
          <%= event.price %></p>
        <p>Location:
          <%= event.location %></p>
        <%= link_to "View", event, class: "btn btn-default" %>
        <!-- <%= link_to "Update", edit_event_path(event), class: "btn btn-default" %> -->
        <a href="#" class="btn btn-success" role="button">Join</a>
      </p>
    </div>
  </div>
</div>
<% end %>
</div>

